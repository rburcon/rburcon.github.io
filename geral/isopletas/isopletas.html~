      border-radius: 8px;
      box-shadow: 0 0 15px rgba(0,0,0,0.5);
      width: 300px;
      color: #fff;
    }

    .coordinates-search h3 {
      margin-top: 0;
      color: #3498db;
      border-bottom: 1px solid #444;
      padding-bottom: 10px;
    }

    .input-group {
      display: flex;
      margin-bottom: 10px;
    }

    .input-group input {
      flex: 1;
      padding: 10px;
      border: 1px solid #444;
      border-radius: 4px;
      font-size: 14px;
      background-color: #222;
      color: #fff;
    }

    .input-group button {
      padding: 10px 15px;
