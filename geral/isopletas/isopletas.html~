<body>
  <div class="map-container">
    <div id="map"></div>

    <div class="coordinates-search">
      <h3>Buscar por coordenadas</h3>
      <div class="input-group">
        <input type="text" id="coordsInput" placeholder="Ex: -15.789, -47.929 ou 23, -45">
        <button onclick="searchByCoordinates()">Buscar</button>
      </div>
      <div id="errorMsg" class="error-message"></div>
      <div class="examples">
        Exemplos válidos: -23.5505,-46.6333 | 12,-45 | -15.789, 47
      </div>
    </div>
  </div>

  <script>
    var map = L.map('map').setView([-15, -55], 4);

    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
      attribution: '© OpenStreetMap contributors'
    }).addTo(map);

    omnivore.kml('isopletas.kml').addTo(map);

    var imageBounds = [[-36, -75], [10, -32]];
    L.imageOverlay('isopletas2-sf.png', imageBounds).addTo(map);

    var coordMarkerLayer = L.layerGroup().addTo(map);

    function searchByCoordinates() {
      const input = document.getElementById('coordsInput').value.trim();
      const errorMsg = document.getElementById('errorMsg');
      errorMsg.textContent = '';

      const coordsRegex = /^-?\d{1,3}(\.\d+)?,\s*-?\d{1,3}(\.\d+)?$/;
      if (!coordsRegex.test(input)) {
        errorMsg.textContent = 'Formato inválido. Use: latitude,longitude';
        return;
      }

      const [lat, lng] = input.split(',').map(coord => parseFloat(coord.trim()));
      if (isNaN(lat) || isNaN(lng) || lat < -90 || lat > 90 || lng < -180 || lng > 180) {
        errorMsg.textContent = 'Valores inválidos';
        return;
      }

      coordMarkerLayer.clearLayers();

      L.marker([lat, lng])
        .addTo(coordMarkerLayer)
        .bindPopup(`
          <b>Coordenadas:</b><br>
          Latitude: ${lat.toFixed(6)}<br>
          Longitude: ${lng.toFixed(6)}
        `)
        .openPopup();

      map.setView([lat, lng], 12);
    }

    document.getElementById('coordsInput').addEventListener('keypress', function(e) {
      if (e.key === 'Enter') searchByCoordinates();
    });
  </script>
</body>
</html>
